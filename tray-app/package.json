{
  "name": "oboto-tray",
  "version": "1.0.0",
  "description": "Oboto system tray service â€” manages the background AI daemon",
  "main": "main.js",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/sschepis/oboto.git"
  },
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:all": "electron-builder --mac --win"
  },
  "build": {
    "appId": "com.oboto.tray",
    "publish": null,
    "productName": "Oboto",
    "directories": {
      "output": "dist"
    },
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "assets/icon.icns",
      "target": ["dmg", "zip"],
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist",
      "notarize": true
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": ["nsis", "portable"]
    },
    "files": [
      "main.js",
      "lib/**/*",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "../",
        "to": "backend",
        "filter": [
          "ai.mjs",
          "bin/**/*",
          "src/**/*",
          "plugins/**/*",
          "!plugins/**/node_modules/**",
          "skills/**/*",
          "ui/dist/**/*",
          "themes.json",
          ".env.example",
          "package.json"
        ]
      },
      {
        "from": "../.backend-modules",
        "to": "backend/node_modules"
      }
    ]
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "electron": "^33.0.0",
    "electron-builder": "^25.0.0"
  }
}
